<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MADGACalc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#333</item>
        <item name="colorPrimaryVariant">#444</item>
        <item name="colorOnPrimary">#c4c4c4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#013732</item>
        <item name="colorSecondaryVariant">#055655</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MADGACalc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MADGACalc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MADGACalc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>