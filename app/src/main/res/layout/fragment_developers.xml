<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".ui.developers.DevelopersFragment">

    <!-- Student 1 Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/student1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: [Student Name]"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/student1_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: [Student ID]"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Student 2 Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/student2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: [Student Name]"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/student2_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: [Student ID]"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Student 3 Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/student3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: [Student Name]"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/student3_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: [Student ID]"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Section & Assignment Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/section_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Section A"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/assignment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile App Development Group Assignment"
                android:textSize="16sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
